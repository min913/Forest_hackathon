class UserProgramModel:
    def __init__(self):
        self.user_info = {
            '키': input("사용자의 키를 입력해주세요: "),
            '몸무게': input("사용자의 몸무게를 입력해주세요: "),
            '성별': input("사용자의 성별을 입력해주세요: ")
        }
        self.program_info = {
            '프로그램명': input("프로그램명을 입력해주세요: "),
            '프로그램유형': input("프로그램 유형을 입력해주세요: ")
        }

    def predict(self):
        required_user_keys = ['키', '몸무게', '성별']
        required_program_keys = ['프로그램명', '프로그램유형']

        if all(key in self.user_info for key in required_user_keys) and all(key in self.program_info for key in required_program_keys):
            return 36
        else:
            raise ValueError("입력 정보가 요구하는 형식에 맞지 않습니다.")

# 모델 생성 및 사용자 정보, 프로그램 정보 입력
model = UserProgramModel()

# 예측
try:
    result = model.predict()
    print(f"예측 결과: {result}kcal")
except ValueError as e:
    print(e)
